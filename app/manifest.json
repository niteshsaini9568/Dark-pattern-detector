{
    "manifest_version": 3,
    "name": "Dark-Patterns-Detector",
    "version": "1.2",
    "description": "Detect dark patterns, block ads, get real-time counts, report incidents, summarize terms, and check for data breaches with DarkPatternDetect+.",
    "icons": {
        "128": "Logo.png"
      },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/common.js",
            "js/block_segment.js",
            "js/content.js"
        ],
        "css": [
            "css/insite.css","css/styles.css","css/t&c.css"
        ],
        "run_at": "document_end"
    }],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "*://*/*",
        "<all_urls>"
    ],
    
    "web_accessible_resources": [
        {
          "resources": [ "report.html" ],
          "matches": [ "https://*/*" ]
        }
      ],
      "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    }
}

